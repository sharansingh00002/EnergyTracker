<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/survey_2title"
        android:textAlignment="center"
        android:textSize="26dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/homeTypeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="84dp"
        android:gravity="center"
        android:text="Type of Home"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/homeTypeSpinner"
        android:layout_width="279dp"
        android:layout_height="34dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp" />
    <TextView
        android:id="@+id/homeAppliances"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Appliances"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/homeTypeSpinner"
        android:layout_marginTop="10dp"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/homeLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/homeAppliances"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/AC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="AC"
                android:textSize="20dp" />
            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent" />
            <CheckBox
                android:id="@+id/acCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="143dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/washingMachine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Washing Machine"
                android:textSize="20dp" />
            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent" />
            <CheckBox
                android:id="@+id/washingMachineCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/Geyser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Geyser"
                android:textSize="20dp" />
            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent" />
            <CheckBox
                android:id="@+id/geyserCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="108dp"
                android:layout_weight="1" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/workAppliances"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work Appliances"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/homeLinearLayout"
        android:layout_marginTop="10dp"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/workLinearLayout"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/workAppliances"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/workLinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/Lift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Lift"
                android:textSize="20dp" />
            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent" />
            <CheckBox
                android:id="@+id/liftCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="143dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/workLinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/kettle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Kettle"
                android:textSize="20dp" />
            <TextView
                android:layout_width="20dp"
                android:layout_height="match_parent" />
            <CheckBox
                android:id="@+id/kettleCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="120dp"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/finish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:onClick="finish"
        android:text="FINISH" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/finish"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-38dp"
        android:text="STEP 5/5"
        android:textSize="15dp" />

</RelativeLayout>